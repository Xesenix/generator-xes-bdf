# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = <%= indentStyle %>
indent_size = <%= indentSize %>
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
indent_style = <%= indentStyle %>
indent_size = <%= indentSize %>
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
charset = utf-8
indent_style = <%= indentStyle %>
indent_size = <%= indentSize %>
